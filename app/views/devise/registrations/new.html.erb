<div class="auth-container">
<div class="font-auth"><h2></h2>Sign upâˆ˜</h2></div>
<br/>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>



    <div class="field">
      <%= f.label :email, class: "font-form"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "font-form"%>


      <% if @minimum_password_length %>
      <em class="float-right">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "font-form" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <%- if controller_name != 'sessions' %>
    <%= link_to "Already have an account?", new_session_path(resource_name), class: "float-right" %><br />
    <% end -%>
<br/>

    <div class="actions">
      <%= f.submit "Sign up", :class => 'submit' %>
    </div>
  <% end %>

</div>
